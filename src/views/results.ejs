<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Trip Plan</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="container mt-5 mb-5">
        <h1 class="mb-4 text-center">Your Trip Plan</h1>
        
        <% if (tripPlan && tripPlan.length > 0) { %>
            <div class="row">
                <div class="col-12">
                    <% if (typeof status !== 'undefined' && status === "error") { %>
                        <div class="alert alert-danger">
                            <h4 class="alert-heading">Error occurred</h4>
                            <p><%= message %></p>
                        </div>
                    <% } %>
                    
                    <% tripPlan.forEach(day => { %>
                        <div class="card mb-4 shadow">
                            <div class="card-header bg-primary text-white">
                                <h2>Day <%= day.day %>: <%= day.location %></h2>
                            </div>
                            <div class="card-body">
                                <h3 class="card-title">Overview</h3>
                                <p class="card-text"><%= day.description %></p>
                                
                                <hr>
                                
                                <h3 class="mb-3">Activities</h3>
                                <div class="list-group mb-4">
                                    <% day.activities.forEach(activity => { %>
                                        <div class="list-group-item">
                                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                                            <%= activity %>
                                        </div>
                                    <% }); %>
                                </div>
                                
                                <% if (day.meals) { %>
                                    <h3 class="mb-3">Meals</h3>
                                    <div class="row mb-4">
                                        <div class="col-md-4 mb-3 mb-md-0">
                                            <div class="card border-success h-100">
                                                <div class="card-header bg-light">
                                                    <strong>Breakfast</strong>
                                                </div>
                                                <div class="card-body">
                                                    <%= day.meals.breakfast %>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 mb-3 mb-md-0">
                                            <div class="card border-success h-100">
                                                <div class="card-header bg-light">
                                                    <strong>Lunch</strong>
                                                </div>
                                                <div class="card-body">
                                                    <%= day.meals.lunch %>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="card border-success h-100">
                                                <div class="card-header bg-light">
                                                    <strong>Dinner</strong>
                                                </div>
                                                <div class="card-body">
                                                    <%= day.meals.dinner %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% } %>
                                
                                <div class="row mb-3">
                                    <div class="col-md-6 mb-3 mb-md-0">
                                        <h3>Accommodation</h3>
                                        <div class="card border-primary">
                                            <div class="card-body">
                                                <%= day.accommodation %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <h3>Transportation Tips</h3>
                                        <div class="card bg-light">
                                            <div class="card-body">
                                                <%= day.transportationTips %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        <% } else { %>
            <div class="alert alert-warning">
                <h4 class="alert-heading">No trip plan found</h4>
                <p>We couldn't generate a trip plan with your criteria. Please try again with different parameters.</p>
            </div>
        <% } %>
        
        <div class="text-center mt-4 mb-5">
            <a href="/generate-trip" class="btn btn-primary btn-lg">Plan Another Trip</a>
        </div>
    </div>
</body>
</html>