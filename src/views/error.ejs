<!-- src/views/error.ejs -->
<% layout('layout/boilerplate') %>

<div class="min-h-screen flex items-center justify-center bg-gray-50 dark:bg-slate-900 transition-colors duration-300">
    <div class="max-w-lg w-full text-center px-6">
        <!-- Error Icon -->
        <div class="mb-8 fade-up">
            <% if (statusCode === 429) { %>
                <i class="bi bi-clock-fill text-6xl text-orange-500 mb-4"></i>
            <% } else if (statusCode === 404) { %>
                <i class="bi bi-exclamation-triangle-fill text-6xl text-yellow-500 mb-4"></i>
            <% } else { %>
                <i class="bi bi-exclamation-circle-fill text-6xl text-red-500 mb-4"></i>
            <% } %>
        </div>
        
        <!-- Error Status -->
        <div class="fade-up">
            <h1 class="text-6xl font-bold text-gray-900 dark:text-white mb-4">
                <%= statusCode || '500' %>
            </h1>
            
            <% if (statusCode === 429) { %>
                <h2 class="text-2xl font-semibold text-orange-600 dark:text-orange-400 mb-4">Rate Limited</h2>
            <% } else if (statusCode === 404) { %>
                <h2 class="text-2xl font-semibold text-yellow-600 dark:text-yellow-400 mb-4">Page Not Found</h2>
            <% } else { %>
                <h2 class="text-2xl font-semibold text-red-600 dark:text-red-400 mb-4">Something Went Wrong</h2>
            <% } %>
            
            <p class="text-gray-600 dark:text-slate-400 mb-8 leading-relaxed">
                <%= message || 'An unexpected error occurred. Please try again.' %>
            </p>
        </div>
        
        <!-- Action Buttons -->
        <div class="space-y-4 fade-up">
            <% if (statusCode === 429) { %>
                <!-- Rate limit specific actions -->
                <div class="bg-orange-50 dark:bg-orange-900/20 p-4 rounded-xl mb-6">
                    <p class="text-sm text-orange-700 dark:text-orange-300">
                        <i class="bi bi-info-circle mr-2"></i>
                        Please wait a few minutes before trying again.
                    </p>
                </div>
                <button onclick="window.location.reload()" class="inline-block w-full px-6 py-3 bg-orange-500 text-white font-bold rounded-full hover:bg-orange-600 transition-colors btn-animate">
                    <i class="bi bi-arrow-clockwise mr-2"></i>
                    Try Again
                </button>
            <% } else { %>
                <!-- General error actions -->
                <a href="/" class="inline-block w-full px-6 py-3 bg-cyan-600 text-white font-bold rounded-full hover:bg-cyan-700 transition-colors btn-animate">
                    <i class="bi bi-house-fill mr-2"></i>
                    Go Back Home
                </a>
            <% } %>
            
            <a href="/generate-trip" class="inline-block w-full px-6 py-3 border border-gray-300 dark:border-slate-600 text-gray-700 dark:text-slate-300 font-semibold rounded-full hover:bg-gray-50 dark:hover:bg-slate-800 transition-colors btn-animate">
                <i class="bi bi-plus-circle mr-2"></i>
                Plan New Trip
            </a>
        </div>
        
        <!-- Additional Help -->
        <div class="mt-12 pt-8 border-t border-gray-200 dark:border-slate-700 fade-up">
            <p class="text-sm text-gray-500 dark:text-slate-500 mb-4">
                Need help planning your Sri Lanka trip?
            </p>
            <div class="flex justify-center space-x-4">
                <a href="/destinations" class="inline-flex items-center text-cyan-600 dark:text-cyan-400 font-semibold hover:underline">
                    <i class="bi bi-map mr-2"></i>
                    Browse Destinations
                </a>
            </div>
        </div>
    </div>
</div>